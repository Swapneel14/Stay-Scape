<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <form action="/listing" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="newlist[title]" placeholder="enter title" class="form-control"
                            required>
                        <div class="valid-feedback">Title Accepted</div>
                        <div class="invalid-feedback">Enter a Valid Title</div>
                    </div>


                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="newlist[description]" placeholder="enter description"
                            class="form-control" required></textarea>

                        <div class="valid-feedback">Nice Description!</div>
                        <div class="invalid-feedback">Please Enter a Proper Description</div>
                    </div>



                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="newlist[image][url]" placeholder="enter image link"
                            class="form-control">
                        <div class="valid-feedback">OK!</div>

                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="newlist[location]" placeholder="enter location" class="form-control"
                            required>
                        <div class="valid-feedback">Ok!</div>
                        <div class="invalid-feedback">Valid Location Needed</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="newlist[price]" placeholder="enter price" class="form-control" required>
                            <div class="valid-feedback">OK!</div>
                            <div class="invalid-feedback">Enter a Valid Price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">country</label>
                            <input type="text" name="newlist[country]" placeholder="enter country" class="form-control"
                                required>
                            <div class="valid-feedback">OK!</div>
                            <div class="invalid-feedback">Enter a Valid Country!</div>
                        </div>
                    </div>
                    <div class="category-box">
                        <% categories.forEach(cat=> { %>
                            <label class="cat-card">
                                <input type="checkbox" name="categories" value="<%= cat %>">
                                <span>
                                    <%= cat %>
                                </span>
                            </label>
                            <% }) %>
                    </div >
                    <button class="btn btn-dark add-btn mt-3">Add</button>
                </form>
            </div>
        </div>
    </body>