<% layout("/layouts/boilerplate") %>

    <body>

        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit Your Listing</h3>

                <form method="POST" action="/listing/<%= list._id %>?_method=PUT" 
                     novalidate
                     class="needs-validation"
                     enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="newlist[title]" value="<%=list.title%>" class="form-control">
                        <div class="valid-feedback">Title Accepted!</div>
                        <div class="invalid-feedback">Enter a Valid Title!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="newlist[description]" class="form-control" required><%= list.description %></textarea>
                        <div class="valid-feedback"> Accepted!</div>
                        <div class="invalid-feedback">Enter a Valid Description</div>


                    </div>

                    <div>
                        Previous Image:- <br>
                        <img src="<%=newurl%>" >
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input type="file" name="newlist[image][url]" value="<%=list.image.url%>" class="form-control" > 
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="newlist[price]" value="<%=list.price%>" class="form-control" required>
                            <div class="valid-feedback"> Accepted!</div>
                            <div class="invalid-feedback">Enter a Valid Price!</div>

                            
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="newlist[country]" value="<%=list.country%>" class="form-control" required>
                             <div class="valid-feedback"> Accepted!</div>
                            <div class="invalid-feedback">Enter a Valid Location</div>

                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Loaction</label>
                        <input type="text" name="newlist[location]" value="<%=list.location%>" class="form-control" required>
                        <div class="valid-feedback"> Accepted!</div>
                        <div class="invalid-feedback">Enter a Valid Location!</div>
                    </div>
                    <button class="btn btn-dark edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </body>
